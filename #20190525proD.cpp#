#include<bits/stdc++.h>
using namespace std;

int main(){
  int n,m;
  cin >> n >> m;
  vector<int> a(n);
  vector<int> b(m);
  vector<int> c(m);

  priority_queue<pair<int, int> > v;

  for(int i=0;i<=n-1;i++){
    cin >> a[i];
    v.push(make_pair(a[i],1));
  }

  for(int i=0;i<=m-1;i++){
    cin >> b[i] >> c[i];
    v.push(make_pair(c[i],b[i]));
  }

  unsigned long long ans = 0;

  for(int i=0;i<n;i++){
    auto p = v.top();
    v.pop();
    ans+= p.first;

    if(p.second>1){
      p.second--;
      v.push(p);
    }
  }
  cout << ans << endl;
}
